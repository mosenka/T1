root = true

# Глобальные настройки, которые будут записаны для всех файлов.
[*]
charset = utf-8
end_of_line = crlf

insert_final_newline = true
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true
max_line_length = 120


[*.md]
trim_trailing_whitespace = false

[*.json]
indent_size = 2
indent_style = space
